<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Entries | Simplerest</title>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.1.1/masonry.pkgd.min.js"></script>
    <script src="http://imagesloaded.desandro.com/imagesloaded.pkgd.js" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="/main.css"></link>
  </head>
  <body>
  <div class="header">
    {{#if user}}
      <div id="logout"><a href="/logout">Logout</a></div>
      <div id="yourentries"><a href="/entries/{{user}}">Your Entries</a></div>
      <div id="name">{{user}}</div>
    {{else}}
      <div id="logout"><a href="/">Sign in</a></div>
      <div id="name">Not logged in.</div>
    {{/if}}
  </div>
  <div class="grid">
    {{#if user}}
      <div class="grid-item add-entry">
        <input id="source-input" type="text" placeholder="Source.."/><br />
        <input maxlength="40" id="description-input" type="text" placeholder="Description.."/>
        <p id="add-entry" class="description">Add Entry</p>
      </div>
    {{/if}}
    <div class="grid-sizer"></div>
    {{#entries}}
      {{{html}}}
    {{/entries}}
  </div>
  </body>
  <script src="/inline_svg.js" type="text/javascript"></script>
  <script src="/entries.js" type="text/javascript"></script>
</html>
